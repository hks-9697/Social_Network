<h1>Chatboxes</h1>

<table>
  <thead>
  <tr>
    <th>Userfrom</th>
    <th>Userto</th>
    <th>Msg</th>
    <th>Image</th>

    <th colspan="4"></th>
  </tr>
  </thead>

  <tbody>
  <% @chatboxes.each do |chatbox| %>
      <tr>
        <td><%= chatbox.userfrom %></td>
        <td><%= chatbox.userto %></td>
        <td><%= chatbox.msg %></td>
        <%if chatbox.userto==@me.userid
          chatbox.type_id=0
        end%>
        <td><%= image_tag(chatbox.chatbox_image, :size => "200x200")%></td>
        <td><%= link_to 'Show', chatbox %></td>
        <% chatbox.save %>
        <% if chatbox.userfrom == User.find(session[:user_id]).userid %>
        <td><%= link_to 'Edit', edit_chatbox_path(chatbox) %></td>
        <td><%= link_to 'Destroy', chatbox, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>

