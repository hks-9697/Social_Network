<h1>Editing User</h1>

<%= form_with(model: @user, local: true, html: { multipart: true }) do |form| %>
    <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= form.label :image %><br>
      <%= form.file_field :image %>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :enc_password, id: :user_enc_password %>
    </div>

    <div class="field">
      <%= form.label :name %>
      <%= form.text_field :name, id: :user_name %>
    </div>

    <div class="field">
      <%= form.label :bithdate %>
      <%= form.date_select :bithdate, id: :user_bithdate %>
    </div>

    <div class="field">
      <%= form.label :sex %>
      <%= form.text_field :sex, id: :user_sex %>
    </div>

    <div class="field">
      <%= form.label :address %>
      <%= form.text_field :address, id: :user_address %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
<% end %>


<%= link_to 'Show', @user %> |
