<script language="javascript" type="text/javascript">setTimeout("location.reload();",1000000);</script>
<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Msg</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.userid %></td>
        <td><%= post.msg %></td>
        <td><%= image_tag(post.post_image, :size => "200x200")%></td>
        <% @user = User.find(session[:user_id]) %>

        <% likess=Like.where(:user_id => @user.id, :post_id => post.id) %>
        <% if likess.size>0 %>
            <td><%= button_to 'UNLIKE', unlike_path(post) , params: { :controller => 'posts', :action => 'unlike' }, class: 'btn btn-danger' %></td>
        <% else %>
            <% session[:like_id]=nil %>
            <td><%= button_to 'LIKE', like_path(post), params: { :controller => 'posts', :action => 'like'}, class: 'btn btn-danger' %></td>
        <% end %>

        <td><%= link_to 'Show', post %></td>
        <%if post.userid == User.find(session['user_id']).userid %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
